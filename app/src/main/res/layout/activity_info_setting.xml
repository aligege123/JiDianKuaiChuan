<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar_setting"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:title="信息设置"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/my_head_image"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/head_image1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/head_image1"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/head_image2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/head_image2"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/head_image3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/head_image3"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/head_image4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/head_image4"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/set_device_name"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_background"
            android:paddingLeft="5dp"
            android:hint="请输入设备名称"
            android:maxLines="1"/>

    </LinearLayout>

</LinearLayout>